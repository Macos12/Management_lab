                            <div class="card">
                                <div class="card-header">
                                    <h4>Total problem per Day</h4>
                                </div>
                                <div class="card-body">
                                    @if (Model.perDays.Count()>0)
                                    {
                                    <div class="table-responsive">
                                        <table class="table table-bordered">
                                            <thead class="tab">
                                                <tr>
                                                    <th scope="col">Date</th>
                                                    <th scope="col">Times</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.perDays)
                                                {
                                                    <tr>
                                                        <td>@item.day/@item.month/@item.year</td>
                                                        
                                                        <td>@item.count</td>
                                                    </tr>
                                                }

                                            </tbody>
                                        </table>
                                    </div>
                                    }
                                    else
                                    {
                                        <p>No Pc problem exist at this moment!</p>
                                    }
                                </div>
                            </div>

                        </div>
