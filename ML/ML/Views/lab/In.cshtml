                                </div>
                                <div class="card-wrap">
                                    <div class="card-header">
                                        <h4>Total Banned</h4>
                                    </div>
                                    <div class="card-body">
                                        @ViewBag.counterBanned
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        @*<div class="col-lg-8 col-md-12 col-12 col-sm-12">
                           
                        </div>*@
                        
                    </div>
                    <div class="row">
                        <div class="col-lg-5 col-md-12 col-12 col-sm-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4>Recent Reports</h4>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled list-unstyled-border">
                                        @foreach (var item in Model.PcProblems)
                                        {


                                        <li class="media">
                                            <div class="media-body">
                                                <div class="float-right"><small>@Html.DisplayFor(modelItem => item.date, "{0:dd-MMM-yyyy}")</small></div>
                                                <div class="media-title">@item.username</div>
                                                <small>@item.MoreDetails</small>
                                            </div>
                                        </li>
                                        }
                                    </ul>
                                    <div class="text-center">
                                        <a href="@Url.Action("Index","problem")" class="btn btn-primary btn-round">
                                            View All
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-7 col-md-12 col-12 col-sm-12">
                            <div class="card">
                                <div class="card-header">
                                    <div class="float-right">
                                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">View All</a>
                                    </div>
                                    <h4>Latest Posts</h4>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Title</th>
                                                    <th>Author</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.announcements)
                                                {
                                                <tr>
                                                    <td>
                                                        @item.Title
                                                        <div class="table-links">
                                                            <div class="bullet"></div>
                                                            <a href="@Url.Action("Details", "Home", new { id = item.GID })">View</a>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <img src="" width="30" class="rounded-circle mr-1">
                                                        @item.username
                                                    </td>
                                                    <td>
                                                        <a href="@Url.Action("Edit", "Home", new { id = item.GID })" class="btn btn-primary btn-action mr-1" data-toggle="tooltip" title="Edit"><i class="ion ion-edit"></i></a>
                                                        <a href="@Url.Action("Delete", "Home", new { id = item.GID })" class="btn btn-danger btn-action" data-toggle="tooltip" title="Delete"><i class="ion ion-trash-b"></i></a>
                                                    </td>
                                                </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </section>
            </div>
            <footer class="main-footer">
