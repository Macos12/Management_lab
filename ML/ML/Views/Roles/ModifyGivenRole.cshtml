@model ML.Models.UserAndRolesModel

    <div class="modal-body">
        @using (Html.BeginForm("ModifyGivenRole", "Roles", FormMethod.Post))
        {
        <form id="myForm">
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(m => m.UserId)
                <div class="form-group">
                    @Html.Label("Role", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("ddl", null, htmlAttributes: new { @class = "form-control" })

                    </div>
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" id="btnSubmit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </form>
        }
    </div>

    @Scripts.Render("~/bundles/jqueryval")
    @section Scripts {

    }
<script type="text/javascript">
    $(function () {
        $('#btnSubmit').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>
