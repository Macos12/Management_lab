                                <div class="user-name">@User.Identity.Getusern()</div>
                                <div class="user-role">
                                    @ViewBag.currentrole
                                </div>
                            </div>
                        </div>
                        <ul class="sidebar-menu">
                            <li class="menu-header">Refer a Pc Problem</li>
                            <li class="active">
                                <a href="@Url.Action("Create", "problem")"><i class="ion ion-document-text"></i><span>Create</span></a>
                            </li>

                        </ul>
                    </aside>
                </div>
            }
            else
            {
