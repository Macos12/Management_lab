                        <div class="sidebar-brand">
                            <a href="@Url.Action("Index", "Home")">Management</a>
                        </div>

                        <div class="sidebar-user">
                            <div class="sidebar-user-details text-center">
                                <div class="user-name">Welcome to the Management</div>
                                <div class="user-role">
